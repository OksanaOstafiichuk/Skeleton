<?xml version="1.0"?>
<!-- Added a promotion block to the sidebar -->

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="div.sidebar.additional">
            <block class="Magento\Cms\Block\Block" name="promotion-slider" before="sidebar.additional">
                <arguments>
                    <argument name="block_id" xsi:type="string">promotion-slider</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
